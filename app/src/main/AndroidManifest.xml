<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialstorybuilder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".storyedit.PageEditor"
            android:screenOrientation="landscape" />
        <activity
            android:name=".adultactivity.AdultInitialActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name=".childactivity.ChildLoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".childactivity.ChildInitialActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name=".childactivity.ChildCreateActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".adultactivity.AdultCreateActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".adultactivity.AdultLoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".storyedit.ConfigureStory"
            android:launchMode="singleTop"
            android:screenOrientation="landscape" />
        <activity
            android:name=".storyedit.StoryReader"
            android:screenOrientation="landscape" />
        <activity
            android:name=".storyedit.ConfigurePages"
            android:screenOrientation="landscape" />
        <activity
            android:name=".storyedit.ConfigureUsers"
            android:screenOrientation="landscape" />
        <activity
            android:name=".storyedit.StatisticViewer"
            android:screenOrientation="landscape" />

    </application>

</manifest>