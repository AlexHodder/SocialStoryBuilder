<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialstorybuilder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChildLoginActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".ChildInitialActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".ChildCreateActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".AdultCreateActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".AdultInitialActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".ui.login.AdultLoginActivity"
            android:screenOrientation="fullSensor">
        </activity>
    </application>

</manifest>